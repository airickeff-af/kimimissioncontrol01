{
  "version": 2,
  "builds": [
    {"src": "*.html", "use": "@vercel/static"},
    {"src": "api/**/*.js", "use": "@vercel/node"}
  ],
  "routes": [
    {"src": "/api/quality", "dest": "/api/quality.js"},
    {"src": "/api/cron", "dest": "/api/cron.js"},
    {"src": "/api/agents", "dest": "/api/agents.js"},
    {"src": "/api/stats", "dest": "/api/stats.js"},
    {"src": "/api/metrics", "dest": "/api/metrics.js"},
    {"src": "/api/config", "dest": "/api/config.js"},
    {"src": "/api/(.*)", "dest": "/api/$1.js"},
    {"src": "/(.*)", "dest": "/$1"}
  ]
}
