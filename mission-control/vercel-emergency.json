{
  "version": 2,
  "builds": [
    {"src": "*.html", "use": "@vercel/static"},
    {"src": "dashboard/*.html", "use": "@vercel/static"},
    {"src": "api/**/*.js", "use": "@vercel/node"}
  ],
  "routes": [
    {"src": "/api/(.*)", "dest": "/api/$1"},
    {"src": "/dashboard/(.*)", "dest": "/dashboard/$1"},
    {"src": "/(.*)", "dest": "/$1"}
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {"key": "Cache-Control", "value": "s-maxage=0"},
        {"key": "Access-Control-Allow-Origin", "value": "*"}
      ]
    }
  ]
}
