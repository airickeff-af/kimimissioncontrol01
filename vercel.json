{
  "version": 2,
  "name": "mission-control-dashboard",
  "builds": [
    { "src": "*.html", "use": "@vercel/static" },
    { "src": "dashboard/*.html", "use": "@vercel/static" },
    { "src": "mission-control/api/**/*.js", "use": "@vercel/node" },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "rewrites": [
    { "source": "/api/leads", "destination": "/api/leads.js" },
    { "source": "/api/agents", "destination": "/mission-control/api/agents.js" },
    { "source": "/api/tasks", "destination": "/mission-control/api/tasks.js" },
    { "source": "/api/stats", "destination": "/mission-control/api/stats.js" },
    { "source": "/api/health", "destination": "/mission-control/api/health.js" },
    { "source": "/api/metrics", "destination": "/mission-control/api/metrics.js" },
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/agents", "destination": "/agents.html" },
    { "source": "/tasks", "destination": "/task-board.html" },
    { "source": "/office", "destination": "/office.html" },
    { "source": "/pixel-office", "destination": "/office.html" },
    { "source": "/agent-roster", "destination": "/agents.html" },
    { "source": "/task-board", "destination": "/task-board.html" },
    { "source": "/deals", "destination": "/deals.html" },
    { "source": "/tokens", "destination": "/token-tracker.html" },
    { "source": "/logs", "destination": "/logs.html" },
    { "source": "/data", "destination": "/data.html" },
    { "source": "/standup", "destination": "/standup.html" },
    { "source": "/vrm", "destination": "/mission-control/dashboard/vrm-viewer.html" },
    { "source": "/meebit", "destination": "/mission-control/dashboard/vrm-viewer.html" },
    { "source": "/dashboard/vrm", "destination": "/mission-control/dashboard/vrm-viewer.html" },
    { "source": "/(.*)", "destination": "/$1" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "s-maxage=0" }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, PUT, DELETE, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization" },
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }
      ]
    }
  ],
  "functions": {
    "api/**/*.js": {
      "maxDuration": 10
    },
    "mission-control/api/**/*.js": {
      "maxDuration": 10
    }
  }
}
