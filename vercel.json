{
  "version": 2,
  "name": "mission-control",
  "builds": [
    {
      "src": "mission-control/dashboard/**",
      "use": "@vercel/static"
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "/api/health.js"
    },
    {
      "src": "/api/agents",
      "dest": "/api/agents.js"
    },
    {
      "src": "/api/tasks",
      "dest": "/api/tasks.js"
    },
    {
      "src": "/api/tokens",
      "dest": "/api/tokens.js"
    },
    {
      "src": "/api/metrics",
      "dest": "/api/metrics.js"
    },
    {
      "src": "/api/logs/activity",
      "dest": "/api/logs/activity.js"
    },
    {
      "src": "/api/logs",
      "dest": "/api/logs/index.js"
    },
    {
      "src": "/api/test",
      "dest": "/api/test.js"
    },
    {
      "src": "/logs-view",
      "dest": "/mission-control/dashboard/logs-view.html"
    },
    {
      "src": "/agents",
      "dest": "/mission-control/dashboard/agents.html"
    },
    {
      "src": "/office",
      "dest": "/mission-control/dashboard/animated-office.html"
    },
    {
      "src": "/data-viewer",
      "dest": "/mission-control/dashboard/data-viewer.html"
    },
    {
      "src": "/task-board",
      "dest": "/mission-control/dashboard/task-board.html"
    },
    {
      "src": "/dealflow",
      "dest": "/mission-control/dashboard/dealflow-view.html"
    },
    {
      "src": "/scout",
      "dest": "/mission-control/dashboard/scout.html"
    },
    {
      "src": "/tokens",
      "dest": "/mission-control/dashboard/token-tracker.html"
    },
    {
      "src": "/hq",
      "dest": "/mission-control/dashboard/hq.html"
    },
    {
      "src": "/((?!api/).*)",
      "dest": "/mission-control/dashboard/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type"
        }
      ]
    }
  ]
}
