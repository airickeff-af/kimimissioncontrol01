{
  "version": 2,
  "name": "mission-control",
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "routes": [
    { "src": "/api/logs/activity", "dest": "/api/logs/activity.js" },
    { "src": "/api/logs", "dest": "/api/logs.js" },
    { "src": "/api/test", "dest": "/api/test.js" },
    { "src": "/api/health", "dest": "/api/health.js" },
    { "src": "/api/agents", "dest": "/api/agents.js" },
    { "src": "/api/deals", "dest": "/api/deals.js" },
    { "src": "/api/tasks", "dest": "/api/tasks.js" },
    { "src": "/api/tokens", "dest": "/api/tokens.js" },
    { "src": "/api/metrics", "dest": "/api/metrics.js" },
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/css/(.*)", "dest": "/mission-control/dashboard/css/$1" },
    { "src": "/js/(.*)", "dest": "/mission-control/dashboard/js/$1" },
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/(.+\\.(html|css|js|png|jpg|jpeg|gif|svg|ico))", "dest": "/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
